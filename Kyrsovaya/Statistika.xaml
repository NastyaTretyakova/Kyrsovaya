<Window x:Class="Kyrsovaya.Statistika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Kyrsovaya"
        mc:Ignorable="d"
        Title="Statistika" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid ShowGridLines="True" Grid.Row="2" >
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <TextBox Margin="60,45,60,20"  Grid.Column="1" Width="auto" Text="{Binding TopList}" >
                
            </TextBox>
            
        </Grid>
        <Grid>
            <ItemsControl Grid.Row="0" Margin="20" FontWeight="Bold" HorizontalAlignment="Center">
                <system:String>Статистика</system:String>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
